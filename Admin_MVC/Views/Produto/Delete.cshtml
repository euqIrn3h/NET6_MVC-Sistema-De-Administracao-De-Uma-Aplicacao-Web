@model Admin_MVC.Models.ProdutoData

@{
    ViewData["Title"] = "Apagar";
    var categoriaNome = "";
}

<h1>Apagar</h1>


<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdUsuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.idCategoria)
        </dt>
        <dd class = "col-sm-10">
            @foreach(var categoria in ViewBag.Categorias)
            {
                if (categoria.Id == Model.idCategoria)
                    categoriaNome = categoria.Nome;                      
            }
            @Html.DisplayFor(modelItem => categoriaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.linkShoppe)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.linkShoppe)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PathFotoPrimaria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PathFotoPrimaria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PathFotoSecundaria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PathFotoSecundaria)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="row p-1">
            <div class="form-group col">
                <input type="hidden" asp-for="Id" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </form>
</div>
