@using Admin_MVC.Business.Dtos;
@model DadosDoUsuarioDto;

@{
    ViewData["Title"] = "Dados Do Usuario";
}

<h2>Atualizar Cadastro</h2>
<div class="row p-3">
    <hr/>
</div>

<div class="row p-2">
    <div class="col">
        <a class="btn btn-primary" asp-action="AlterarSenha" asp-route-id="@Model.Id">Alterar Senha</a>
    </div>
    <div class="col">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Atualizar Cadastro</a>
    </div>
</div>

<div class="row p-3">
    <hr/>
</div>
<div class="row p-1">
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" readonly/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group ">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" readonly/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group ">
        <label asp-for="Descricao" class="control-label"></label>
        <textarea asp-for="Descricao" class="form-control" readonly></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
</div>
<div class="row p-3">
    <hr/>
</div>
