@using Admin_MVC.Business.Dtos;
@model AlteraSenhaDto;

@{
    ViewData["Title"] = "Atualizar Senha";
}

<h2>Atualizar Senha</h2>
<div class="row p-3">
    <hr/>
</div>
<form asp-action="AlterarSenha">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row p-1">
        <div class="form-group">
            <input asp-for="Id" type="hidden"/>
            <span asp-validation-for="Id"></span>
        </div>
        <div class="form-group">
            <label asp-for="Senha" class="control-label"></label>
            <input asp-for="Senha" class="form-control" type="password"/>
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmaSenha" class="control-label"></label>
            <input asp-for="ConfirmaSenha" class="form-control" type="password"/>
            <span asp-validation-for="ConfirmaSenha" class="text-danger"></span>
        </div>
    </div>
    <div class="row p-3">
        <hr/>
    </div>
    <div class="row p-1">
        <div class="form-group col">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Voltar</a>
            <input type="submit" value="Salvar" class="btn btn-success" />
        </div>
    </div>
</form>